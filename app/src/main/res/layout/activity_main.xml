<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="-5"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonMinus5"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="84dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="92dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.376" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/buttonMinus1" android:onClick="subtract5"/>
    <Button
            android:text="-10"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonMinus10"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonMinus5" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.273" app:layout_constraintVertical_bias="0.0"
            android:onClick="subtract10"/>
    <Button
            android:text="+5"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="92dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/buttonPlus1" android:onClick="add5" android:id="@+id/button10"
            app:layout_constraintStart_toEndOf="@+id/buttonMinus5" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.096"/>
    <Button
            android:text="+10"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonPlus10"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button10" app:layout_constraintStart_toEndOf="@+id/buttonMinus10"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.096" app:layout_constraintVertical_bias="0.0"
            android:onClick="add10"/>
    <TextView
            android:layout_width="198dp"
            android:layout_height="94dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.451"
            app:layout_constraintVertical_bias="0.144" android:textSize="80sp" android:textAlignment="center"
            android:id="@+id/textCounter"/>
    <Button
            android:text="-1"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonMinus1"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="84dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="92dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.376" app:layout_constraintVertical_bias="0.774"
            android:onClick="subtract1"/>
    <Button
            android:text="+1"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonPlus1"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="92dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.096" app:layout_constraintVertical_bias="0.774"
            app:layout_constraintStart_toEndOf="@+id/buttonMinus1" android:onClick="add1"/>

</android.support.constraint.ConstraintLayout>